{
  "name": "safe-bar-and-lounge-manager",
  "version": "1.0.0",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "npx electron .",
    "server": "node server.js",
    "test": "jest",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.safebar.manager",
    "productName": "SafeBar Manager",
    "files": [
      "**/*",
      "!dist/**/*",
      "!tests/**/*",
      "!stock_data.json",
      "!.env",
      "!.gitignore"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "SafeBar Manager"
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "electron-store": "^11.0.2",
    "exceljs": "^4.3.0",
    "express": "^4.18.2",
    "nodemailer": "^6.10.1"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^26.7.0",
    "electron-rebuild": "^3.2.9",
    "jest": "^29.6.1"
  }
}